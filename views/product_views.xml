<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_normal_form_view_label" model="ir.ui.view">
        <field name="name">product.product.form.label</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Label" name="label">
                    <group>
                        <group>
                            <field name="label_title"/>
                            <field name="label_subtitle"/>
                            <field name="label_lifetime"/>
                            <field name="label_storage_temp"/>
                            <field name="label_fixed_weight"/>
                        </group>
                        <group>
                            <field name="label_ingredient"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
